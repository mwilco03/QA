{
    "manifest_version": 3,
    "name": "LMS QA Validator",
    "version": "8.0.0",
    "description": "Extract Q&A content from LMS courses, detect SCORM/xAPI APIs, and validate eLearning content. Refactored architecture with single orchestrator.",

    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "downloads",
        "tabs"
    ],

    "host_permissions": [
        "<all_urls>"
    ],

    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon-16.png",
            "32": "icons/icon-32.png",
            "48": "icons/icon-48.png",
            "128": "icons/icon-128.png"
        },
        "default_title": "LMS QA Validator"
    },

    "background": {
        "service_worker": "background/service-worker.js"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content/content.js"],
            "all_frames": true,
            "match_about_blank": true,
            "run_at": "document_idle"
        }
    ],

    "web_accessible_resources": [
        {
            "resources": [
                "lib/lms-qa-validator.js",
                "lib/tasks-extractor.js",
                "core/types.js",
                "core/logger.js",
                "core/session.js",
                "core/normalize.js",
                "core/rules.js",
                "core/pipeline.js",
                "core/messages.js",
                "core/storage.js",
                "core/extract.js",
                "core/index.js",
                "extractors/base.js",
                "extractors/lms/storyline.js",
                "extractors/lms/generic.js"
            ],
            "matches": ["<all_urls>"]
        }
    ],

    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    }
}
